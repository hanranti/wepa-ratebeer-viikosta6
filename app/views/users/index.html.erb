<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped table-hover">
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <% if current_user && current_user.admin && user.blocked %>
          <td>Account frozen</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

